<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <simple_checkout>
            <general>
                <disable_company>1</disable_company>
                <disable_telephone>0</disable_telephone>
                <disable_header>1</disable_header>
                <disable_footer>1</disable_footer>
                <disable_copyright>1</disable_copyright>
                <hide_shipping_methods>1</hide_shipping_methods>
                <display_logo>1</display_logo>
                <disable_login_popup>1</disable_login_popup>
                <force_totals_full_mode>1</force_totals_full_mode>
            </general>
            <colors>
                <body_background>transparent</body_background>
                <checkout_background>#f5f5f5</checkout_background>
                <checkout_border>#cccccc</checkout_border>
            </colors>
            <geo_ip>
                <enabled>1</enabled>
            </geo_ip>
            <newsletter>
                <enabled>1</enabled>
                <checked>1</checked>
                <label>Subscribe to our newsletter to receive exclusive offers and the latest news on our products and services.</label>
            </newsletter>
        </simple_checkout>
    </default>
</config>