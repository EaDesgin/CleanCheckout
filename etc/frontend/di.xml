<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\Block\Checkout\LayoutProcessor">
        <plugin name="disable_checkout_fields" type="Rubic\SimpleCheckout\Plugin\DisableCheckoutFieldsPlugin" />
        <plugin name="add_newsletter_component" type="Rubic\SimpleCheckout\Plugin\AddNewsletterComponentPlugin" />
    </type>
    <type name="Magento\Tax\Model\TaxConfigProvider">
        <plugin name="geo_ip_country" type="Rubic\SimpleCheckout\Plugin\GeoIpCountryPlugin" />
    </type>
    <type name="Magento\Checkout\Model\CompositeConfigProvider">
        <arguments>
            <argument name="configProviders" xsi:type="array">
                <item name="simple_checkout_config_provider" xsi:type="object">Rubic\SimpleCheckout\Model\CheckoutConfigProvider</item>
            </argument>
        </arguments>
    </type>
</config>